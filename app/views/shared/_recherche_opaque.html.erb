

<div class="container-recherche <%= "bot-side" if current_page?(places_path)%>  <%= "background-gray-opacity" if current_page?(places_path)%> " >

  <div class="search-bar">


<%= form_with url: places_path, method: :get, html: { class: "simple_form search", novalidate: "novalidate" } do |form| %>
    <div data-controller= "address-autocomplete" data-address-autocomplete-api-key-value=<%= ENV["MAPBOX_API_KEY"]  %>
>
      <%= form.text_field :address,
       data: { address_autocomplete_target: "address" }
      %>
      <%= form.submit "sub"%>



      <div data-controller= "filter"> <!-- data controller -->
            <input type="text" name="query" data-filter-target="input" > <%#=  Vetments,Electronique %>


              <div class="filtre <%= "background-white-opacity" if current_page?(places_path)%>" data-action="click->filter#addToInput" data-value="Électronique">
                🪫  Électronique
              </div>

               <div class="filtre <%= "background-white-opacity" if current_page?(places_path)%>" data-action="click->filter#addToInput" data-value="Organique">
                🪫  Organique
              </div>

          <!--  data action pour chaque filtre qui appel la meme methode
            cette methode va recup l'input target de query et ajouter l'innerText de cette div


            inputTarget.value += event.target.innerText
          -->
      </div>


<% end %>



  </div>

    <div class="filtres">
            <%= link_to places_path(query: "Électronique") do %>
              <div class="filtre <%= "background-white-opacity" if current_page?(places_path)%>">
                🪫  Électronique
              </div>
            <% end %>
            <%= link_to places_path(query: "Organique") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🍌  Organique
              </div>
            <% end %>
            <%= link_to places_path(query: "Vêtements") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                👚  Vêtements
              </div>
            <% end %>
            <%= link_to places_path(query: "Filtre") do %>
              <div class=" filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🪑  Meubles
              </div>
            <% end %>
            <%= link_to places_path(query: "Mégots") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🚬  Mégots
              </div>
            <% end %>
            <%= link_to places_path(query: "Autre") do %>
              <div class="filtre  <%= "background-white-opacity" if current_page?(places_path)%>">
                🗑️  Autre
              </div>
            <% end %>

    </div>
</div>
